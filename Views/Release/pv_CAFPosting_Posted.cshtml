<script>

    function onDataCAFPosted() {
        var program = $("#Progss").val();
        var account = $("#account_list").val();
        var ppaid = $("#account_list").val() == 2861 ? $("#subppa_list").val() : 0;
        var charge_office = $("#account_list").val() == 2861 ? 0 : $("#subppa_list").val();// $("#charge_office").val();
        var year = $("#ddlYear").val();
        var caftrans = $("#caftrans").val();
        return {
            program: program,
            account: account,
            ppaid: ppaid,
            charge_office: charge_office,
            year: year,
            caftrans: 1
        }
    }
    function searchAccount() {
        var $filter = new Array();
        $filter = [];

        if ($('#SearchDataCAFPosted').val().length > 0) {
            $filter.push({ field: "office", operator: "contains", value: $('#SearchDataCAFPosted').val() }),
            $filter.push({ field: "account", operator: "contains", value: $('#SearchDataCAFPosted').val() }),
            $filter.push({ field: "dscription", operator: "contains", value: $('#SearchDataCAFPosted').val() }),
            $filter.push({ field: "cafno", operator: "contains", value: $('#SearchDataCAFPosted').val() }),
            $filter.push({ field: "dateissued", operator: "contains", value: $('#SearchDataCAFPosted').val() });
        }

        $('#cafgridposted').data('kendoGrid').dataSource.filter({
            logic: "or",
            filters: $filter
        });

    }

    $(function () {
        $("#SearchDataCAFPosted").keypress(function (e) {
            if (e.keyCode == 13) {
                searchAccount();
            }
        });
    });
</script>
