                            document.getElementById("cbCO").checked = true;
                        }
                        else {
                            document.getElementById("cbCO").checked = false;
                        }

                        break;
                    case 3:
                        if (d[i] == 1) {
                            document.getElementById("cbFE").checked = true;
                        }
                        else {
                            document.getElementById("cbFE").checked = false;
                        }

                        break;

