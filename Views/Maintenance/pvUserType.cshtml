            document.getElementById("AdditionalRulesDIV").style.display = "none";
        }
        else {
            document.getElementById("AdditionalRulesDIV").style.display = "block";
            loadAdditionalRules();
        }
        
    }    
    function loadAdditionalRules() {
        var UserTypeID = $('#ddlUserType').val()
        var url = "@Url.Action("GetAdditionalRules", "Maintenance")";
        $.post(url, { UserTypeID: UserTypeID }, function (d) {

            for (var i = 0; i <= (d.length - 1) ; i++) {
                switch (i) {
                    case 0:                        
                        if (d[i] == 1) {
                            document.getElementById("cbPS").checked = true;
                        }
                        else {
                            document.getElementById("cbPS").checked = false;
                        }
                        
                        break;
                    case 1:
                        if (d[i] == 1) {
                            document.getElementById("cbMOOE").checked = true;
                        }
                        else {
                            document.getElementById("cbMOOE").checked = false;
                        }

                        break;
                    case 2:
