<div style="display:inline-block;margin-left:250px;margin-bottom:20px">
    <input type="radio" id="Current" style="width:20px;" value=1 checked onclick="currentclick()"/>
    <label style="display:inline-block" onclick="currentlabel()"> Current </label>
    <input type="radio" id="Continuing" value=0 style="margin-left:30px;width:20px;" onclick="excessclick()"/>
