        }
    }

    function SearchTrans() {
        $("#NOTC").data("kendoGrid").dataSource.read();
    }

    $("#obrno").change(function () {
        //sync();
    }).keypress(function (e) {
        if (e.keyCode == 13) {
            SearchTrans();
        }
    });

    function fnMainPPA() {
        var officeid_temp= $("#officeid_temp").val()
        return {
            selaccountid: $("#selaccountid").val(),
            accountid:$("#accountid").val(),
            yearof: $("#yearof").val(),
            status: $("#Current").val() == 1 ? 0 : 1,
            officeid_temp: officeid_temp
        }
    }

    var thisculture = kendo.culture();
