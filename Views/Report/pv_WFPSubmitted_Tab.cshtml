<script>
 function fn_refresher(e) {
     var SelectedTabIndex = $("#gridwfp_tabstrip").data("kendoTabStrip").select().index();
        if (SelectedTabIndex == 0) {
            $("#WFPGridSubmitted").data("kendoGrid").dataSource.read();
        }
        else {
            $("#WFPGridSubmitted_summary").data("kendoGrid").dataSource.read();
        }
 }
 
</script>

<div class="demo-section k-content">
    @(Html.Kendo().TabStrip()
          .Name("gridwfp_tabstrip")
          .Navigatable(false)
          .Animation(animation =>
              animation.Open(effect =>
              effect.Fade(FadeDirection.In)))
          .Items(tabstrip =>
          {
              tabstrip.Add().Text("Submitted").Selected(true).LoadContentFrom("wfpsubmittedv2", "Report");
              tabstrip.Add().Text("Summary").LoadContentFrom("wfpsubmitted_tab", "Report");
          })
          .Events(e => e.Activate("fn_refresher"))

    )
</div>

