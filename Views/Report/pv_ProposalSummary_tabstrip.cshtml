<script>
    function fn_refresher(e) {
        var SelectedTabIndex = $("#grid_tabstrip").data("kendoTabStrip").select().index();
        if (SelectedTabIndex == 0) {
            $("#grd_proposalsummary_detail").data("kendoGrid").dataSource.read();
        }
        else {
            $("#grd_proposalsummary_existing").data("kendoGrid").dataSource.read();
        }
    }
</script>
<div class="demo-section k-content">
    @(Html.Kendo().TabStrip()
          .Name("grid_tabstrip")
          .Navigatable(false)
          .Animation(animation =>
              animation.Open(effect =>
              effect.Fade(FadeDirection.In)))
          .Items(tabstrip =>
          {
              tabstrip.Add().Text("Proposal").Selected(true).LoadContentFrom("proposal_summary_detail_form", "Report");
              tabstrip.Add().Text("Existing").LoadContentFrom("proposal_summary_existing", "Report");
          })
          .Events(e => e.Activate("fn_refresher"))

    )
</div>

