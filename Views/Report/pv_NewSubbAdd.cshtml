<script>

    function GetFundID() {
        return {
            Type_ID: '@Session["Type_ID"]',
            Year_Of: '@Session["Year_Of"]'
        }
    }


    function reqSave() {
        var notifi = new $("#popupNotification").data("kendoNotification");

        var url = "@Url.Action("Save_Subs", "Report")";

        var Sub1_Desc_ID = $('#dllSubs').val()
        var Sub1_Desc = $("#dllSubs").data("kendoComboBox").text();
        var Sub2_Desc_ID = $('#dllSubs2').val()
        var Sub2_Desc = $("#dllSubs2").data("kendoComboBox").text();
        var Past_year = $('#Past_year').val()
        var Current_year = $('#Current_year').val()
        var Budget_year = $('#Budget_year').val()

        if (Sub2_Desc_ID == null || Sub2_Desc_ID == 0 || Sub2_Desc == null || Sub2_Desc == "") {
            alert("Please Add First Sub")
        }
 
            $.post(url, { Sub1_Desc_ID: Sub1_Desc_ID, Sub1_Desc: Sub1_Desc, Sub2_Desc_ID: Sub2_Desc_ID, Sub2_Desc: Sub2_Desc, Past_year: Past_year, Current_year: Current_year, Budget_year: Budget_year, Type_ID: '@Session["Type_ID"]', Year_Of: '@Session["Year_Of"]' }, function (e) {
                if (e == "1") {
                    swal({
                        title: "Success!",
                        text: "Non-Office Account has been Removed.",
                        timer: 2000,
                        type: "success",
                        showConfirmButton: false
                    })
                    $('#Typegrid').data('kendoGrid').dataSource.read();
                } else {
                    swal({
                        title: "Error!",
                        text: "System Error! Please try again.",
                        timer: 2000,
                        type: "error",
                        showConfirmButton: false
                    })
                }
            

        });


            $('#Typegrid').data('kendoGrid').dataSource.read();


    }

    function reqAddSub2() {
        $("#ComboSub").css("visibility", "visible")
        $("#addSub").css("visibility", "hidden")
    }
</script>
