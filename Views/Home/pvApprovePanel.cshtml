<style>
    label {
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color:#383434;
        font-size:18px;
    }
</style>
<script>
    function LoadPrograms() {
        $("#ddlProgram").data("kendoDropDownList").dataSource.read();
    }
    function ProgramData() {
        var proyy = $("#ddlBudgetYear").val();
        var off_id = $("#ddlOffice").val();
        return {
            propYear: proyy,
            office_ID: off_id,
        }
    }
    function ViewApproveAccounts() {
        var BudgetYear = $("#ddlBudgetYear").val();
        var OfficeID = $("#ddlOffice").val();
        var ProgramID = $("#ddlProgram").val();
        $(window).scrollTop(0);
        var url = "@Url.Action("ViewApproveAccounts", "Home")";
        $.get(url, {BudgetYear: BudgetYear, OfficeID: OfficeID, ProgramID: ProgramID}, function (d) {
            document.documentElement.style.overflow = 'hidden';  // firefox, chrome
            document.body.scroll = "no";
            $('#ViewApprove').html(d);
        })
        $('#ViewApprove').data('kendoWindow').title("<i class='fa fa-navicon'> </i> List of Approve Accounts").center().open();
    }
</script>
<div style="width : 100%; margin-top: 10px;margin-left:-5px;border-style: solid; border-color: #1fa67a">

    <div style="width:100%;height : 35px ; background-color:#1fa67a; color: white">
        <h2 style="margin-left: 5px;color:white"><i class="fa fa-rss"></i></h2>
    </div>
    <div style="padding:5px;margin-bottom:50px;">
        <div style="margin-top:20px;margin-left:5px;">
            <label>
                Office : &nbsp;&nbsp;&nbsp;
                @(Html.Kendo().ComboBox()
                                    .Name("ddlOffice")
                                    .DataTextField("office_name")
                                    .Placeholder("Select Office . .")
                                    .Filter("contains")
                                    .MinLength(2)
                                    .DataValueField("office_id")
                                    .HtmlAttributes(new { @style = "width: 80%;" })
                                    .Events(e => e.Change("LoadPrograms"))
                                    .DataSource(source => source.Read(read => read.Action("ddlOffice", "Dropdowns")))

                )
            </label>
        </div>
        <div style="margin-top:20px;margin-left:5px;width:100%;display:inline-block;">
            <div style="display:inline-block;">
                <label>
                    Program :
                    @(Html.Kendo().DropDownList()
                            .Name("ddlProgram")
                            .DataTextField("ProgramDescription")
                            .DataValueField("ProgramID")
                            .OptionLabel("Select Program...")
                            .HtmlAttributes(new { @style = "width: 385px;" })
                            .Events(e => e.Open("LoadPrograms"))
                            .DataSource(source => source.Read(read => read.Action("GetPrograms2", "dpPrograms").Data("ProgramData")))
                    )
                </label>
            </div>
            <div style="display:inline-block">
                <label>
                    Budget Year :
                    @(Html.Kendo().DropDownList()
                        .Name("ddlBudgetYear")
                        .DataTextField("ProposalYear")
                        .DataValueField("ProposalYear")
                        .SelectedIndex(0)
                        .HtmlAttributes(new { @style = "width: 90px;" })
                        .DataSource(source => source.Read(read => read.Action("GetPropYear", "PYear")))
                        .Events(e => e.Change("LoadPrograms"))
                    )
                </label>
            </div>
        </div>
        <div style="margin-top:20px;margin-left:5px;">
            <div class="k-button k-state-active" style="float:right;margin-right:60px;padding:10px;" onclick="ViewApproveAccounts()"><b>View Approve Accounts</b></div>
        </div>
        
    </div>
</div>
<script>
    function Close() {
        document.documentElement.style.overflow = 'auto';
        document.body.scroll = "yes";
    }
</script>
@(Html.Kendo().Window()
        .Name("ViewApprove")
        .Title("New Entry")
        .Width(1000)
        .Height(600)
        .Visible(false)
        .Modal(true)
        .Draggable(true)
        .AutoFocus(true)
        .Events(e => e.Close("Close"))
        .Animation(a =>
        {
            a.Open(o => o.SlideIn(SlideDirection.Down));
            a.Close(c =>
            {
                c.SlideIn(SlideDirection.Down);
                c.Reverse(true);
            });
        })
                .Actions(a => { a.Close(); })
)

@(Html.Kendo().Window()
        .Name("ViewHistoryAmount")
